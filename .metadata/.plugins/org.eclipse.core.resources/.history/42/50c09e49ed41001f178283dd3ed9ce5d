	<!-- Bootstrap JS -->
	<script type="text/javascript" th:src="@{/webjars/bootstrap/js/bootstrap.min.js}"></script>
</head>

<body>


	<th th:fragment="column_link(fieldName, columnLabel, removeTag)" th:remove="${removeTag}">
		<a  th:href="@{'/users/page/' + ${currentPage} +'?sortField='+ ${fieldName} +'&sortDir=' + ${sortField != fieldName ? sortDir : reverseSortDir} + ${keyword != null ? '&keyword=' + keyword : ''}}" class="text-white">
			[[${columnLabel}]]
		</a>
						
		<!-- icon -->
		<span th:if="${sortField == fieldName}" 
		th:class="${sortDir == 'asc' ? 'fas fa-sort-up' : 'fas fa-sort-down'}"></span>
	</th>
	
	<a th:fragment="page_link(pageNum, label)" 
		class="page-link" th:href="@{'/users/page/' + ${pageNum} + '?sortField=' + ${sortField} + '&sortDir=' + ${reverseSortDir} + ${keyword != null ? '&keyword=' + keyword : ''}}">
		[[${label}]]
	</a>
	
	<!-- Enabled Category -->
	<div th:fragment="category_status" th:remove="tag">
		<a th:if="${cat.enabled == true}" class="far fa-check-circle icon-blue" 
		th:href="@{'/categories/' + ${cat.id} + '/enabled/false'}" title="Disabled this Category"></a>
		
		<a th:if="${cat.enabled == false}" class="far fa-check-circle icon-dark" 
		th:href="@{'/categories/' + ${cat.id} + '/enabled/true'}" title="Enabled this Category"></a>
	</div>
	
	<!-- Action Category -->
	<div th:fragment="category_actions" th:remove="tag">
		<a class="far fa-edit icon-green" th:href="@{'/categories/edit/' + ${cat.id}}" title="edit this Category"></a>
		 &nbsp; 
		 
		 <th:block>
		 
		 
		 </th:block>
		 
		 <a class="far fa-minus-square icon-red link-delete" 
		 th:href="@{'/categories/delete/' + ${cat.id}}" 
		 th:catId="${cat.id}"
		 title="delete this Category"></a>
	</div>
</body>
