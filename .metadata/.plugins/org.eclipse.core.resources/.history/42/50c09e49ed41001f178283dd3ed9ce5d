	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>[[${title}]]</title> 
	
	<!-- CSS -->
	<link rel="stylesheet" type="text/css" th:href="@{/css/style.css}"/>
