<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">

<body>
	<div th:fragment="content" class="col-sm-2">
	
		<div>
			<a th:href="@{'/p/' + ${product.alias}}">
				<img th:src="@{${product.getMainImagePath}}" width="150">
				<br/>
				<b>[[${product.name}]]</b>
			</a>
		</div>
		<div th:if="${product.discountPercent <= 0}">
			<div th:replace="products/product_fragment :: price_fragment(${product.price})"></div>
		</div>
		<div th:if="${product.discountPercent > 0}">
			<span style="font-size : larger; color:darkred;">
				<div th:replace="products/product_fragment :: price_fragment(${product.getDiscountPrice})"></div>
			
			<del><span><div th:replace="products/product_fragment :: price_fragment(${product.price})"</div></span></del>
		</div>
	</div>
	
	<div th:fragment="price_fragment(productPrice)" th:remove="tag">
		<span th:if="${CURRENCY_SYMBOL_POSITION == 'Before price'}" th:remove="tag">
				<span>[[${CURRENCY_SYMBOL}]] [[${productPrice}]]</span>
		</span>>
		<span  th:if="${CURRENCY_SYMBOL_POSITION == 'After price'}"  th:remove="tag">
			<span>[[${productPrice}]] [[${CURRENCY_SYMBOL}]]</span>
		</span>
	</div>
	
</body>
</html>