<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head th:fragment="page_head(title, remove)" th:remove="${remove}">
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>[[${title}]]</title> 
	
	<!-- CSS -->

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" type="text/css" th:href="@{/webjars/bootstrap/css/bootstrap.min.css}"/>
	
	<!-- jQuery -->
	<script type="text/javascript" th:src="@{/webjars/jquery/jquery.min.js}"></script>
	<!-- Bootstrap JS -->
	<script type="text/javascript" th:src="@{/webjars/bootstrap/js/bootstrap.min.js}"></script>
</head>

<body>
	
	<!-- Sort by label -->
	<th th:fragment="column_link(moduleURL ,fieldName, columnLabel, removeTag)" th:remove="${removeTag}">
		<a  th:href="@{${moduleURL} +'/page/' + ${currentPage} +'?sortField='+ ${fieldName} +'&sortDir=' + ${sortField != fieldName ? sortDir : reverseSortDir} + ${keyword != null ? '&keyword=' + keyword : ''}}" class="text-white">
			[[${columnLabel}]]
		</a>
						
		<!-- icon down and up -->
		<span th:if="${sortField == fieldName}" 
		th:class="${sortDir == 'asc' ? 'fas fa-sort-up' : 'fas fa-sort-down'}"></span>
	</th>
	
	<!-- Sort down and up -->
	<a th:fragment="page_link(moduleURL, pageNum, label)" 
		class="page-link" th:href="@{${moduleURL}+'/page/' + ${pageNum} + 
		'?sortField=' + ${sortField} + '&sortDir=' + ${reverseSortDir} + ${keyword != null ? '&keyword=' + keyword : ''} + ${categoryId != null ? '&categoryId=' + categoryId : ''}}">
		[[${label}]]
	</a>
	
	
	<!-- Action Category -->
	<div th:fragment="category_actions" th:remove="tag">
		<a class="far fa-edit icon-green" th:href="@{'/categories/edit/' + ${cat.id}}" title="edit this Category"></a>
		 &nbsp; 
		 
		 <th:block th:if="${cat.hasChildren == false}">
			  <a class="far fa-minus-square icon-red link-delete" 
			 th:href="@{'/categories/delete/' + ${cat.id}}" 
			 th:entityId="${cat.id}"
			 title="delete this Category"></a>
		 </th:block>
		 
		
	</div>
	

	
</body>
</html>

