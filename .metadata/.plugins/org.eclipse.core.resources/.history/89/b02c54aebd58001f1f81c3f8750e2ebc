let extraImageCount = $("[id^='divExtraImage']").length;

$(document).ready(() => {
    jQuery.noConflict(); // fix lỗi xung đột jquery

    // extra image
    $("input[name='extraImage']").each(function (index) {
        $(this).change(() => {
            showExtraImageThumbnail(this, index);
        });
    });
});

function showExtraImageThumbnail(fileInput, index) {
    var file = fileInput.files[0]; // Lấy tệp đầu tiên từ input file
    var reader = new FileReader(); // Tạo một đối tượng FileReader
    var imageNameHiddenId = $("#imageName" + index);
    var fileName = file.name;

    if (imageNameHiddenId.length) {
        imageNameHiddenId.val(fileName);
    }

    reader.onload = function(e) { // Đặt một hàm xử lý sự kiện khi đọc tệp hoàn thành
        $("#extraThumbnail" + index).attr("src", e.target.result); // Đặt thuộc tính src của phần tử hình ảnh có id là "thumbnail" bằng dữ liệu base64 của tệp
    };

    reader.readAsDataURL(file); // Đọc tệp dưới dạng URL data (base64)

    if (index >= extraImageCount - 1) {
        addNextExtraImageSection(index + 1);
    }
}

function addNextExtraImageSection(index) {
    var htmlExtraImage = `<div class="col border m-3 p-2" id="divExtraImage${index}">
        <div id="extraImageHeader${index}" class="d-flex justify-content-between">
            <label>Extra Image #${index + 1} : </label>
        </div>
        <div>
            <img id="extraThumbnail${index}" alt="Extra image #${index + 1} preview" class="img-fluid" src="${defaultImageSrc}"/>
        </div>
        <div>
            <input type="file" id="extraImage${index}" name="extraImage" 
                onchange="showExtraImageThumbnail(this, ${index})"
                accept="image/png, image/jpeg">
        </div>
    </div>`;
    
    var htmlIconDelete = `<a data-id="${index}" class="btn fas fa-minus icon-dark remove-btn-image" title="Remove this image" style="color:gray;"></a>`;
    $("#divProductImages").append(htmlExtraImage);
    $("#extraImageHeader" + index).append(htmlIconDelete);
    
    extraImageCount++;
}

$(document).on('click', '.remove-btn-image', function() {
    var imageId = $(this).data('id');
    removeExtraImage(imageId);
});

function removeExtraImage(index) {
    $("#divExtraImage" + index).remove();
}
