spring.application.name=ShopmeBackEnd
# khai báo port server
server.port=8080
# thay thế đường dẫn ngữ cảnh để dễ quản lí URL
# mọi đường dẫn phải bắt đầu bằng /ShopmeAdmin
server.servlet.context-path=/ShopmeAdmin

# kết nối db
spring.datasource.url=jdbc:mysql://localhost:3306/shopmedb
spring.datasource.username=root
spring.datasource.password=nst271023

# config jpa/hibernate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# fix lỗi spring >= 2.6 ko hiển thị đc ảnh
#spring.mvc.pathmatch.matching-strategy=ant-path-matcher


# configure debug enabled
#debug=true

# enable trace
#trace=true

# configure logging level
#logging.level.root=WARN => chỉ in ra 1 logging warn

#use log file
logging.file.name=shopmeBackend.log
=> in ra filelog trong shopmeBE

