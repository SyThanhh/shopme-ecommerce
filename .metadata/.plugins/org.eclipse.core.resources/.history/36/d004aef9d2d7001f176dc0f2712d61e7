<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head th:fragment="page_head(title, remove)" th:remove="${remove}">
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>[[${title}]] - [[${SITE_NAME}]]</title> 
	
	<!-- CSS -->
	<link rel="stylesheet" th:href="@{/css/style.css}" />

	<!-- Để chèn thêm css -->
	 <th:block th:insert="~{fragments :: additional_css}"></th:block>
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" type="text/css" th:href="@{/webjars/bootstrap/css/bootstrap.min.css}"/>
	
	<!-- jQuery -->
	<script type="text/javascript" th:src="@{/webjars/jquery/jquery.min.js}"></script>
	<!-- Bootstrap JS -->
	<script type="text/javascript" th:src="@{/webjars/bootstrap/js/bootstrap.min.js}"></script>
</head>

<body>
	
	<!-- Sort by label -->
	<th th:fragment="column_link(moduleURL ,fieldName, columnLabel, removeTag)" th:remove="${removeTag}">
		<a  th:href="@{${moduleURL} +'/page/' + ${currentPage} +'?sortField='+ ${fieldName} +'&sortDir=' + ${sortField != fieldName ? sortDir : reverseSortDir} + ${keyword != null ? '&keyword=' + keyword : ''}}" class="text-white">
			[[${columnLabel}]]
		</a>
						
		<!-- icon down and up -->
		<span th:if="${sortField == fieldName}" 
		th:class="${sortDir == 'asc' ? 'fas fa-sort-up' : 'fas fa-sort-down'}"></span>
	</th>
	
	<!-- Sort down and up -->
	<a th:fragment="page_link(moduleURL, pageNum, label)" 
		class="page-link" th:href="@{${moduleURL}+'/page/' + ${pageNum} + 
		'?sortField=' + ${sortField} + '&sortDir=' + ${reverseSortDir} + ${keyword != null ? '&keyword=' + keyword : ''} + ${categoryId != null ? '&categoryId=' + categoryId : ''}}">
		[[${label}]]
	</a>
	
	
	<!-- Action Category -->
	<div th:fragment="category_actions" th:remove="tag">
		<a class="far fa-edit icon-green" th:href="@{'/categories/edit/' + ${cat.id}}" title="edit this Category"></a>
		 &nbsp; 
		 
		 <th:block th:if="${cat.hasChildren == false}">
			  <a class="far fa-minus-square icon-red link-delete" 
			 th:href="@{'/categories/delete/' + ${cat.id}}" 
			 th:entityId="${cat.id}"
			 title="delete this Category"></a>
		 </th:block>
		 
		
	</div>
	
	<!-- Pagination -->
	<div th:fragment="pagination(moduleURL, entityName)" th:remove="tag">
		<div class="text-center m-1" th:if="${totalItems > 0}">
			Showing  # [[${startCount}]] to [[${endCount}]] of [[${totalItems}]]
			
		</div>
		<div class="text-center m-1" th:unless="${totalItems > 0}">
			Not found [[${entityName}]]
		</div>
		<div th:if="${totalItems > 0}" class="">
			<nav class="" aria-label="Page navigation example ">
			  <ul class="pagination justify-content-center flex-wrap" >
			    <li th:class="${currentPage > 1 ? 'page-item' :'page-item disabled' }">
			    	<a th:replace="fragments :: page_link(${moduleURL},1, 'First')"></a>
			    </li>
			     <li th:class="${currentPage > 1 ? 'page-item' :'page-item disabled' }">
			    	<a th:replace="fragments :: page_link(${moduleURL} ,${currentPage - 1}, 'Previous')"></a>
			    </li>
			    
			    <li th:class="${currentPage != i ? 'page-item' : 'page-item active'}" th:each="i : ${#numbers.sequence(1, totalPages)}">
			   		<a th:replace="fragments :: page_link(${moduleURL} ,${i}, ${i})"></a>
			    </li>
			   
			    <li th:class="${currentPage < totalPages ? 'page-item' :'page-item disabled' }">
			   		<a th:replace="fragments :: page_link(${moduleURL} ,${currentPage + 1}, 'Next')"></a>
			    </li>
			    
			     <li th:class="${currentPage < totalPages ? 'page-item' :'page-item disabled' }">
			    	
			   		<a th:replace="fragments :: page_link(${moduleURL} , ${totalPages}, 'Last')"></a>
			    </li>
			  </ul>
			</nav>
		</div> 
		
	</div>
	
	<!-- Search -->
	<div th:fragment="search_form(moduleURL)">
			<form th:action="@{${moduleURL}}" class="form-inline m-3">
				<input type="hidden" name="sortField" th:value="${sortField}" />
				<input type="hidden" name="sortDir" th:value="${sortDir}" />
				Filter : &nbsp;
				<input type="search" name="keyword" th:value="${keyword}" class="form-control" placeholder=""/>
				&nbsp;&nbsp;
				<button type="submit" value="search" class="btn btn-primary">
					<i class="fas fa-search"></i>
				</button>
				&nbsp;&nbsp;
				<button type="button" value="clear" class="btn btn-secondary" onclick="clearFilter()">
					<i class="fas fa-eraser"></i>
				</button>
			</form>
		</div>
		
	<!-- User status -->
	<div th:fragment="status(enabled, entityName, entityURL)" th:remove="tag">
		<a th:if="${enabled == true}" class="far fa-check-circle icon-blue" 
		th:href="@{${entityURL} + '/enabled/false'}" th:title="'Disabled this ' + ${entityName}"></a>
		
		<a th:if="${enabled == false}" class="far fa-check-circle icon-dark" 
		th:href="@{${entityURL} + '/enabled/true'}" th:title="'Enabled this ' +  ${entityName}"></a>
	
	</div>
	
	<!-- User actions -->
	<div th:fragment="edit(entityName, editURL)" th:remove="tag">
		<a class="far fa-edit icon-green" th:href="@{${editURL}}" th:title="'Edit this ' + ${entityName}"></a> 
		
	</div>
	
	<!-- Delete condition with haven't hasChildren -->
	<div th:fragment="delete(entityName , entityId, deleteURL, visible)" th:remove="tag">
		 <th:block th:if="${visible}"> <!-- cat.hasChildren == false -->
			 <a class="far fa-minus-square icon-red link-delete" 
			 th:href="@{${deleteURL}}" 
			 th:entityId="${entityId}"
			 th:title="'Delete this' +  ${enityName}"></a>
		</th:block>
	</div>
</body>
</html>

