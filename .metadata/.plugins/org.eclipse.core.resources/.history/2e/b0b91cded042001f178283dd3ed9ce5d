<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head th:fragment="page_head(title)">
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>[[${title}]]</title> 
	
	<!-- CSS -->
	<link rel="stylesheet" type="text/css" th:href="@{/css/style.css}"/>
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" type="text/css" th:href="@{/webjars/bootstrap/css/bootstrap.min.css}"/>
	<!-- FontAwesome CSS -->
	<link rel="stylesheet" type="text/css" th:href="@{/fontawesome/all.min.css}"/>
	
	<!-- jQuery -->
	<script type="text/javascript" th:src="@{/webjars/jquery/jquery.min.js}"></script>
	<!-- Bootstrap JS -->
	<script type="text/javascript" th:src="@{/webjars/bootstrap/js/bootstrap.min.js}"></script>
</head>

<body>


	<th th:fragment="column_link(fieldName, columnLabel, removeTag)" th:remove="${removeTag}">
		<a  th:href="@{'/users/page/' + ${currentPage} +'?sortField='+ ${fieldName} +'&sortDir=' + ${sortField != fieldName ? sortDir : reverseSortDir} + ${keyword != null ? '&keyword=' + keyword : ''}}" class="text-white">
			[[${columnLabel}]]
		</a>
						
		<!-- icon -->
		<span th:if="${sortField == fieldName}" 
		th:class="${sortDir == 'asc' ? 'fas fa-sort-up' : 'fas fa-sort-down'}"></span>
	</th>
	
	<a th:fragment="page_link(moduleURL, pageNum, label)" 
		class="page-link" th:href="@{ ${moduleURL}+'/page/' + ${pageNum} + '?sortField=' + ${sortField} + '&sortDir=' + ${reverseSortDir} + ${keyword != null ? '&keyword=' + keyword : ''}}">
		[[${label}]]
	</a>
	
	<!-- Enabled Category -->
	<div th:fragment="category_status" th:remove="tag">
		<a th:if="${cat.enabled == true}" class="far fa-check-circle icon-blue" 
		th:href="@{'/categories/' + ${cat.id} + '/enabled/false'}" title="Disabled this Category"></a>
		
		<a th:if="${cat.enabled == false}" class="far fa-check-circle icon-dark" 
		th:href="@{'/categories/' + ${cat.id} + '/enabled/true'}" title="Enabled this Category"></a>
	</div>
	
	<!-- Action Category -->
	<div th:fragment="category_actions" th:remove="tag">
		<a class="far fa-edit icon-green" th:href="@{'/categories/edit/' + ${cat.id}}" title="edit this Category"></a>
		 &nbsp; 
		 
		 <th:block th:if="${cat.hasChildren == false}">
			  <a class="far fa-minus-square icon-red link-delete" 
			 th:href="@{'/categories/delete/' + ${cat.id}}" 
			 th:entityId="${cat.id}"
			 title="delete this Category"></a>
		 </th:block>
		 
		
	</div>
	
	<!-- Pagination -->
	<div th:fragment="pagination(moduleURL, entityName)" th:remove="tag">
		<div class="text-center m-1" th:if="${totalItems > 0}">
			Showing user # [[${startCount}]] to [[${endCount}]] of [[${totalItems}]]
			
		</div>
		<div class="text-center m-1" th:unless="${totalItems > 0}">
			Not found User
		</div>
		Paging
		<div th:if="${totalItems > 0}" class="">
			<nav class="" aria-label="Page navigation example ">
			  <ul class="pagination justify-content-center flex-wrap" >
			    <li th:class="${currentPage > 1 ? 'page-item' :'page-item disabled' }">
			    	<a th:replace="fragments :: page_link(1, 'First')"></a>
			    </li>
			     <li th:class="${currentPage > 1 ? 'page-item' :'page-item disabled' }">
			    	<a th:replace="fragments :: page_link(${currentPage - 1}, 'Previous')"></a>
			    </li>
			    
			    <li th:class="${currentPage != i ? 'page-item' : 'page-item active'}" th:each="i : ${#numbers.sequence(1, totalPages)}">
			   		<a th:replace="fragments :: page_link(${i}, ${i})"></a>
			    </li>
			   
			    <li th:class="${currentPage < totalPages ? 'page-item' :'page-item disabled' }">
			   		<a th:replace="fragments :: page_link(${currentPage + 1}, 'Next')"></a>
			    </li>
			    
			     <li th:class="${currentPage < totalPages ? 'page-item' :'page-item disabled' }">
			    	
			   		<a th:replace="fragments :: page_link( ${totalPages}, 'Last')"></a>
			    </li>
			  </ul>
			</nav>
		</div> 
		
	</div>
</body>
</html>

