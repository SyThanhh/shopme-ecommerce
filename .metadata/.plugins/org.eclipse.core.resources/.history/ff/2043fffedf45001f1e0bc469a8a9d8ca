                           required minlength="3"
                            maxlength="128" />
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-sm-4">Brand Logo : </label>
                    <div class="col-sm-8">
                        <input type="hidden" th:field="*{logo}"> <input
                            type="file" id="fileImage" name="fileImage"
                            accept="image/png , image/jpeg" class="mb-2" th:required="${brand.logoPath  == null}" />
                            
                            <div class="mt-2">
                            	 <img id="thumbnail" alt="Logo preview" class="img-cluid" th:src="@{${brand.logoPath}}" />
                            </div>
                    </div>
                </div>
                
                  <div class="form-group row">
                    <label class="col-sm-4">Select one or more categories </label>
                    <div class="col-sm-8">
                       <select class="form-control" th:field="*{categories}" multiple required style="resize : vertical; height=200px">
                       		<th:block th:each="cat : ${listCategories}">
                       			<option th:value="${cat.id}">[[${cat.name}]]</option>
                       		</th:block>
                       </select>
                       
                    </div>
