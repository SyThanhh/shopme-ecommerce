spring.application.name=ShopmeFrontEnd
# khai báo port server
server.port=80
# thay thế đường dẫn ngữ cảnh để dễ quản lí URL
# mọi đường dẫn phải bắt đầu bằng /Shopme
server.servlet.context-path=/Shopme

spring.datasource.url=jdbc:mysql://localhost:3306/shopmedb
spring.datasource.username=root
spring.datasource.password=nst271023

# config jpa/hibernate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect