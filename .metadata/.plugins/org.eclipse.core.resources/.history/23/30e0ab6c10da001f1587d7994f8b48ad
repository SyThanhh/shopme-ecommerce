<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<body>

	<div th:fragment="content" th:remove="tag">
		<div class="form-group row">
			<label class="col-sm-2">Product name :</label>
			<div class="col-sm-10">
				<th:block th:if="${!#authorization.expression('hasAuthority(''Admin'')') && !#authorization.expression('hasAuthority(''Salesperson'')')}">
				    <th:block sec:authorize="hasAnyAuthority('Salesperson')">
				        <input type="text" class="form-control" th:field="*{name}" readonly="readonly" />
				    </th:block>
				</th:block>
				<th:block th:if="${#authorization.expression('hasAuthority(''Admin'')') || #authorization.expression('hasAuthority(''Salesperson'')')}">
					<input type="text" class="form-control" th:field="*{name}" required
						minlength="3" maxlength="256" />
				</th:block>
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2">Alias :</label>
			<div class="col-sm-10">
				<th:block th:if="${!#authorization.expression('hasAuthority(''Admin'')') && !#authorization.expression('hasAuthority(''Salesperson'')')}">
				    <th:block sec:authorize="hasAnyAuthority('Salesperson')">
					    <input type="text" class="form-control" th:field="*{alias}" required
						readonly="readonly" />
					</th:block>
				</th:block>
				
				<th:block th:if="${#authorization.expression('hasAuthority(''Admin'')') || #authorization.expression('hasAuthority(''Salesperson'')')}">
					<input type="text" class="form-control" th:field="*{alias}" required
					th:readonly="${#authorization.expression('hasAuthority(''Salesperson'')')}"
					minlength="3" maxlength="256" />
				</th:block>
			</div>
		</div>


		<div class="form-group row">
			<label class="col-sm-2">Brand :</label>
			<div class="col-sm-10">
				<th:block sec:authorize="hasAnyAuthority('Admin', 'Editor')">
					<select th:field="*{brand}" class="form-control" required>
						<th:block th:each="brand : ${listBrands}">
							<option th:value="${brand.id}">[[${brand.name}]]</option>
						</th:block>
					</select>
				</th:block>

				<th:block sec:authorize="hasAuthority('Salesperson')">
					<input type="text" class="form-control"
						th:value="${product.brand.name}" readonly />
				</th:block>
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2">Category :</label>
			<div class="col-sm-10">
				<th:block sec:authorize="hasAnyAuthority('Admin', 'Editor')">
					<th:block th:if="${product.category != null}">
						<select th:field="*{category}" class="form-control" required>
							<th:block th:each="cat : ${product.brand.categories}">
								<option th:value="${cat.id}">[[${cat.name}]]</option>
							</th:block>
					</th:block>
					
					<th:block th:if="${product.category == null}">
						<select th:field="*{category}" class="form-control" required></select>
					</th:block>
				</th:block>
				
				<th:block sec:authorize="hasAnyAuthority('Salesperson')">
					<input type="text" class="form-control"
						th:value="${product.category.name}" readonly />
				</th:block>
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2">Enabled : </label>
			<div class="col-sm-10">
				<input type="checkbox" th:field="*{enabled}"
					th:disabled="${#authorization.expression('hasAuthority(''Salesperson'')')}" />
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2">in-Stock : </label>
			<div class="col-sm-10">
				<input type="checkbox" th:field="*{inStock}"
					th:disabled="${#authorization.expression('hasAuthority(''Salesperson'')')}" />
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2">Cost :</label>
			<div class="col-sm-10">
				<input type="number" class="form-control" th:field="*{cost}" />
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2">Price :</label>
			<div class="col-sm-10">
				<input type="number" class="form-control" th:field="*{price}" />
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2">Discount :</label>
			<div class="col-sm-10">
				<input type="number"  step="0.01" class="form-control"
					th:field="*{discountPercent}" />
			</div>
		</div>



	</div>
</body>
</html>
